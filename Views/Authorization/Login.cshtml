@{
    ViewData["Title"] = "Login";
}

<div class="login-window">
    <form id="loginForm">
        <div class="mb-3">
            <label class="form-label">Email </label>
            <input name="login" type="text" />
        </div>
        <div class="mb-3">
            <label class="form-label">Пароль</label>
            <input name="password" type="text" />
        </div>
        <div class="mb-3" style="display:flex">
            <button id="login" class="btm btn-primary" >Войти</button>
            <a class="nav-link text-dark" asp-controller="Authorization" asp-action="Registration">Регистрация</a>
        </div>
    </form> 
</div>

@section Scripts
    {
    <script>
        $('#login').on('click', function (e) {
            e.preventDefault();
            $.ajax({
                type: 'POST',
                url: '@Url.Action($"SignIn", "Authorization")',
                data: $('#loginForm').serialize(),
            });
        });
    </script>
}